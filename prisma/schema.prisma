generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) @db.Uuid
  role Role @relation(fields: [roleId], references: [id])
  roleId String
  name String
  identification String @unique
  password String 
  Phone String
}

model Role {
  id String @id @default(uuid()) @db.Uuid
  name String @unique
  description String
  user User[]
}





